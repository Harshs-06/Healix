<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_marginTop="15dp"

    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_height="wrap_content">

 <TextView
     android:id="@+id/plantitle"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="Trending"
     android:fontFamily="@font/poppins_semibold"
     android:textColor="@color/black"
     android:textSize="22sp"/>

    <FrameLayout
        android:layout_width="330dp"
        android:layout_height="220dp">
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            app:cardCornerRadius="15dp"
            app:strokeColor="@android:color/transparent"
            app:cardBackgroundColor="@android:color/transparent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/planimg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/summerweightloss_img"
                android:scaleType="centerCrop"/>
            <LinearLayout
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:paddingLeft="10dp"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:background="@drawable/diet_plan_desc_linearlayout_design"
                android:layout_height="70dp">
                <TextView
                    android:id="@+id/plansubtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Summer Weight Loss"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/black"
                    android:textSize="19sp"/>
                <TextView
                    android:id="@+id/plandescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-5dp"

                    android:text="Light, refreshing meals for hot weather weight loss"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="#666565"
                    android:textSize="16sp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </FrameLayout>

</LinearLayout>