<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/gradient_background"
    tools:context=".Person_height"
    android:padding="24dp"
    android:gravity="center_horizontal">

    <!-- Space for top margin like 100dp -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="100dp" />

    <TextView
        android:id="@+id/questionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What is your height"

        android:textSize="35sp"

        android:fontFamily="@font/poppins_bold"
        android:textColor="#000"
        android:layout_marginTop="-5dp"
        />

    <!-- Space between title and picker -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="32dp" />

    <!-- Height Picker -->

    <!-- Units Label -->
    <NumberPicker
        android:id="@+id/heightPicker"
        android:layout_width="100dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/unitLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cm"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:fontFamily="@font/poppins_bold"
        android:layout_marginTop="0dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />




    <com.google.android.material.button.MaterialButton
        android:id="@+id/height_to_nextbutton"
        android:layout_width="315dp"
        android:layout_height="57dp"
        android:layout_marginTop="50dp"
        app:cardBackgroundColor="@color/blue"
        android:text="Next"
        android:layout_gravity="center"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:cornerRadius="10dp"/>
</LinearLayout>
