<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="310dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginTop="15dp"
    app:cardBackgroundColor="#F6F5F5"
    app:cardCornerRadius="10dp"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/testTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test Title"
            android:textSize="18sp"
            android:textColor="#000000"
            android:fontFamily="@font/poppins_semibold" />

        <TextView
            android:id="@+id/testDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Short description or preparation info"
            android:fontFamily="@font/poppins_medium"
            android:textSize="14sp"
            android:textColor="#555555"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/testCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category"
            android:textSize="14sp"
            android:fontFamily="@font/poppins"
            android:textColor="#777777"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/testDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date and Time"
            android:textSize="14sp"
            android:fontFamily="@font/poppins"
            android:textColor="#333333"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/testAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address + Pincode"
            android:textSize="14sp"
            android:fontFamily="@font/poppins"
            android:textColor="#333333"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/testAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‚¹1000"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_semibold"

            android:textColor="#0F77F0"
            android:layout_marginTop="6dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
