<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp"
    android:layout_height="match_parent"
    tools:context=".GoalsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Goals"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Letâ€™s start with goals."
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select up to 3 that are important to you, including one weight goal."
            android:textColor="#AAAAAA"
            android:textSize="14sp"
            android:layout_marginBottom="16dp" />

        <!-- Checkboxes -->
        <CheckBox
            android:id="@+id/checkbox_lose_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lose Weight"
            android:textColor="#000000"
            android:padding="16dp"
            android:buttonTint="#000000" />


        <CheckBox android:id="@+id/checkbox_maintain_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Maintain Weight"
            android:textColor="#000000"
            android:padding="16dp"
            android:buttonTint="#000000" />

        <CheckBox android:id="@+id/checkbox_gain_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gain Weight"
            android:textColor="#000000"
            android:padding="16dp"
            android:buttonTint="#000000" />

        <CheckBox android:id="@+id/checkbox_gain_muscle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gain Muscle"
            android:textColor="#000000"
            android:padding="16dp"
            android:buttonTint="#000000" />

        <CheckBox android:id="@+id/checkbox_modify_diet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Modify My Diet"
            android:textColor="#000000"
            android:padding="16dp"
            android:buttonTint="#000000" />

        <CheckBox android:id="@+id/checkbox_plan_meals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Plan Meals"
            android:textColor="#000000"
            android:padding="16dp"
            android:buttonTint="#000000" />

        <CheckBox android:id="@+id/checkbox_manage_stress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manage Stress"
            android:textColor="#000000"
            android:padding="16dp"
            android:buttonTint="#000000" />

        <!-- Next Button -->
        <Button
            android:id="@+id/button_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Next"
            android:backgroundTint="#3A86FF"
            android:textColor="#000000"
            android:layout_marginTop="24dp"
            android:padding="12dp"
            />
    </LinearLayout>
</ScrollView>