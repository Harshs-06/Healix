<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:strokeColor="@android:color/transparent"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@android:color/white">
    <LinearLayout
        android:layout_width="match_parent"


        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_marginStart="10dp"
            android:orientation="horizontal"
            android:gravity="center|start"
            android:layout_height="70dp">
             <ImageView
                 android:layout_width="50dp"
                 android:layout_gravity="center"
                 android:src="@drawable/prof1"
                 android:layout_height="50dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/category"
                    android:layout_width="wrap_content"
                    android:textSize="15sp"
                    android:text="Asked for Male"
                    tools:ignore="HardcodedText"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-7dp"
                    android:fontFamily="@font/poppins"
                    android:text="28 Years,Bangalore"
                    tools:ignore="HardcodedText"
                    android:textColor="#686666"
                    android:textSize="13sp" />
            </LinearLayout>



            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:textSize="15sp"
                tools:ignore="HardcodedText"
                android:text="10d ago"
                android:layout_marginStart="120dp"
                android:layout_marginTop="-10dp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="#686666"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView
            android:layout_marginEnd="10dp"

            android:id="@+id/problem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_bold"
            tools:ignore="HardcodedText"
            android:text="Feeling rod post surgery"/>

        <TextView
            android:id="@+id/detail"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textSize="16sp"
            android:fontFamily="@font/poppins"
            tools:ignore="HardcodedText"
            android:text="I am having bp machine, i.e, Telmikind trio 12.5 (Telmisartan 40mg + cilnidipine 10mg, + Chlorthalidone 12.5mg)
And having colestrol medication Rosulip 10..."
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center"
            android:background="@drawable/card_bottom_design"
            android:layout_height="50dp">

            <TextView

                android:id="@+id/doc_ans"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="16sp"
                android:fontFamily="@font/poppins_semibold"
                tools:ignore="HardcodedText"
                android:text="3 answers from doctor"
                android:textColor="@color/white"/>


            <ImageView
                android:layout_width="35dp"
                android:layout_marginStart="30dp"
                android:layout_gravity="center"
                android:src="@drawable/doctor_profile"
                android:layout_height="35dp"/>
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>