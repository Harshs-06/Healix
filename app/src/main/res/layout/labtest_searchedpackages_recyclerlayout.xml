<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_marginTop="10dp"

    android:layout_marginStart="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="300dp"
        android:layout_height="205dp"
        app:strokeColor="@android:color/transparent"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="#0F77F0">
        <LinearLayout
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@android:color/transparent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">
                <TextView
                    android:id="@+id/packagetitle"
                    android:layout_width="240dp"
                    android:layout_marginTop="17dp"
                    

                    android:layout_height="wrap_content"
                    tools:ignore="HardcodedText"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:text="Basic Wellness"/>

                <ImageButton
                    android:id="@+id/favourite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/favourite_icon"
                    app:tint="@color/favourite_selector"/>


            </LinearLayout>
            <TextView

                android:layout_width="wrap_content"
                android:id="@+id/packagedesc"
                

                android:layout_height="wrap_content"
                tools:ignore="HardcodedText"
                android:fontFamily="@font/poppins"
                android:textColor="#E6FFFF"
                android:textSize="14sp"
                android:text="No preparation needed"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                
                android:orientation="horizontal">
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="32dp"
                    app:cardCornerRadius="5dp"
                    app:strokeColor="@color/white"
                    app:cardBackgroundColor="@android:color/transparent"
                    android:layout_height="32dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:src="@drawable/tubeicon"/>
                </com.google.android.material.card.MaterialCardView>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="-5dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="#ADC7FB"
                        android:textSize="16sp"
                        android:layout_height="wrap_content"
                        android:text="Tests"/>
                    <TextView
                        android:id="@+id/notest"
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/white"
                        android:layout_marginTop="-3dp"
                        android:textSize="17sp"
                        android:layout_height="wrap_content"
                        android:text="81"/>
                </LinearLayout>
                <Space
                    android:layout_width="50dp"
                    android:layout_height="match_parent"/>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="32dp"
                    app:cardCornerRadius="5dp"
                    app:strokeColor="@color/white"
                    app:cardBackgroundColor="@android:color/transparent"
                    android:layout_height="32dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:src="@drawable/timeicon"/>
                </com.google.android.material.card.MaterialCardView>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="-5dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="#ADC7FB"
                        android:textSize="16sp"
                        android:layout_height="wrap_content"
                        android:text="TAT"/>
                    <TextView
                        android:id="@+id/testtime"
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/white"
                        android:layout_marginTop="-3dp"
                        android:textSize="17sp"
                        android:layout_height="wrap_content"
                        android:text="8 Hours"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"

                
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/actualprice"
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/white"

                    android:textSize="20sp"
                    android:layout_height="wrap_content"
                    android:text="₹1999"/>

                <TextView
                    android:id="@+id/totalprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="#ADC7FB"
                    android:layout_marginStart="10dp"
                    android:textSize="18sp"

                    android:layout_gravity="center"
                    android:text="₹2999"
                    tools:ignore="HardcodedText"
                    />

                <TextView
                    android:id="@+id/discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/white"
                    android:layout_marginStart="10dp"
                    android:textSize="13sp"

                    android:layout_gravity="center"
                    android:text="You saved 33%"
                    tools:ignore="HardcodedText"
                    />


            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/bookbutton"
                    android:layout_width="130dp"
                    app:backgroundTint="@color/white"
                    android:text="Book"
                    android:textColor="#2558E7"
                    android:textSize="14sp"
                    app:rippleColor="#C8C8C8"
                    android:fontFamily="@font/poppins_semibold"
                    app:cornerRadius="10dp"
                    android:layout_height="45dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/showallbutton"
                    android:layout_width="130dp"
                    android:layout_marginStart="10dp"
                    app:backgroundTint="@color/white"
                    app:rippleColor="#C8C8C8"
                    android:text="Show All"
                    android:textColor="#2558E7"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_semibold"
                    app:cornerRadius="10dp"
                    android:layout_height="45dp"/>
            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>