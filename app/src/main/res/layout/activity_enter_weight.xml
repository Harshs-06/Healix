<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@drawable/gradient_background"
    android:orientation="vertical"
    tools:context=".Enter_weight">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Whatâ€™s your weight?"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp" />

    <EditText
        android:id="@+id/weightInput"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:inputType="numberDecimal"
        android:background="@drawable/user_details_transparent_editbox"
        android:gravity="center"
        android:textSize="48sp"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal" />

    <RadioGroup
        android:id="@+id/unitSelector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal">

        <RadioButton
            android:id="@+id/kgButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kg"
            android:checked="false" />

        <RadioButton
            android:id="@+id/lbsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="lbs"
            android:checked="true" />
    </RadioGroup>

    <TextView
        android:id="@+id/bmiResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:text="Your BMI is being calculated..."
        android:textColor="#000000"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/nextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next"
        android:background="#000000"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:padding="16dp" />
</LinearLayout>
