<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@drawable/gradient_background"
    android:orientation="vertical"
    tools:context=".Enter_weight">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Whatâ€™s your weight?"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp" />

    <EditText
        android:id="@+id/weightInput"
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:inputType="numberDecimal"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:textSize="48sp"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal" />
    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/unitToggleGroup"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        app:shapeAppearanceOverlay="@style/RoundedCorners"
        app:checkedButton="@id/kgButton"
        app:singleSelection="true"
        app:materialButtonToggleGroupStyle="@style/CustomToggleButton">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/kgButton"
            style="@style/CustomToggleButton"
            android:text="kg" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/lbsButton"
            style="@style/CustomToggleButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="lbs" />
    </com.google.android.material.button.MaterialButtonToggleGroup>


    <TextView
        android:id="@+id/bmiResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:text="Your BMI is being calculated..."
        android:textColor="#000000"
        android:textSize="14sp" />



    <com.google.android.material.button.MaterialButton
        android:id="@+id/weight_to_nextbutton"
        android:layout_width="315dp"
        android:layout_height="57dp"
        android:visibility="invisible"
        android:layout_marginTop="50dp"
        app:cardBackgroundColor="@color/blue"
        android:text="Next"
        android:layout_gravity="center"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:cornerRadius="10dp"/>
</LinearLayout>
